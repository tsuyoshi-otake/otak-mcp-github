{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node16", // "node16" から "Node16" に修正 (大文字・小文字を合わせる)
    "module": "Node16", // "ESNext" から "Node16" に修正
    "lib": ["ESNext"],
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
